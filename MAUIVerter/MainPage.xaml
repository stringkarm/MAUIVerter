<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MAUIVerter.MainPage"
             BackgroundColor="#cbe2ff">

    <Grid RowDefinitions="180, *"
          VerticalOptions="FillAndExpand">

        <Image Source="fixedbg.png"
               Aspect="AspectFill"
               VerticalOptions="FillAndExpand"
               HorizontalOptions="FillAndExpand"/>

        <ScrollView Grid.Row="1" Margin="30,-60">
            <VerticalStackLayout Spacing="12" Padding="0, 0, 0, 90">

                <!-- Information Category -->
                <Frame BackgroundColor="#5BA3D0" 
                       CornerRadius="25" 
                       Padding="0" 
                       BorderColor="Transparent"
                       HasShadow="True">
                    <Frame.GestureRecognizers>
                        <TapGestureRecognizer Tapped="OnInformationTapped"/>
                    </Frame.GestureRecognizers>

                    <Grid Padding="20" ColumnDefinitions="Auto,*">
                        <Image Grid.Column="0" 
                               Source="informations.png" 
                               HeightRequest="100" 
                               WidthRequest="100"
                               Margin="0,0,15,0"/>

                        <VerticalStackLayout Grid.Column="1" 
                                           VerticalOptions="Center"
                                           Spacing="5">
                            <Label Text="Information" 
                                   FontFamily="Lilitaone"
                                   FontSize="20" 
                                   FontAttributes="Bold" 
                                   TextColor="White"/>
                            <Label Text="Convert digital storage and data sizes between bits, bytes, and larger units" 
                                   FontSize="10" 
                                   TextColor="White" 
                                   LineBreakMode="WordWrap"/>
                        </VerticalStackLayout>
                    </Grid>
                </Frame>

                <!-- Volume Category -->
                <Frame BackgroundColor="#7EB5D6" 
                       CornerRadius="25" 
                       Padding="0" 
                       BorderColor="Transparent" 
                       HasShadow="True">
                    <Frame.GestureRecognizers>
                        <TapGestureRecognizer Tapped="OnVolumeTapped"/>
                    </Frame.GestureRecognizers>

                    <Grid Padding="20" ColumnDefinitions="*,Auto">
                        <VerticalStackLayout Grid.Column="0" 
                                           VerticalOptions="Center"
                                           Spacing="5">
                            <Label Text="Volume" 
                                   FontSize="20" 
                                   FontFamily="Lilitaone"
                                   FontAttributes="Bold" 
                                   TextColor="White"
                                   HorizontalTextAlignment="End"/>
                            <Label Text="Convert liquid and cubic capacity measurements across different systems" 
                                   FontSize="10" 
                                   TextColor="White" 
                                   LineBreakMode="WordWrap"
                                   HorizontalTextAlignment="End"/>
                        </VerticalStackLayout>

                        <Image Grid.Column="1" 
                               Source="volume.png" 
                               HeightRequest="100" 
                               WidthRequest="100"
                               Margin="15,0,0,0"/>
                    </Grid>
                </Frame>

                <!-- Length Category -->
                <Frame BackgroundColor="#5BA3D0" 
                       CornerRadius="25" 
                       Padding="0" 
                       BorderColor="Transparent" 
                       HasShadow="True">
                    <Frame.GestureRecognizers>
                        <TapGestureRecognizer Tapped="OnLengthTapped"/>
                    </Frame.GestureRecognizers>

                    <Grid Padding="20" ColumnDefinitions="Auto,*">
                        <Image Grid.Column="0" 
                               Source="length.png" 
                               HeightRequest="100" 
                               WidthRequest="100"
                               Margin="0,0,15,0"/>

                        <VerticalStackLayout Grid.Column="1" 
                                           VerticalOptions="Center"
                                           Spacing="5">
                            <Label Text="Length" 
                                   FontSize="20" 
                                   FontFamily="Lilitaone"
                                   FontAttributes="Bold" 
                                   TextColor="White"/>
                            <Label Text="Convert distances and measurements between metric and imperial units" 
                                   FontSize="10" 
                                   TextColor="White" 
                                   LineBreakMode="WordWrap"/>
                        </VerticalStackLayout>
                    </Grid>
                </Frame>

                <!-- Mass Category -->
                <Frame BackgroundColor="#7EB5D6" 
                       CornerRadius="25" 
                       Padding="0" 
                       BorderColor="Transparent"
                       HasShadow="True">
                    <Frame.GestureRecognizers>
                        <TapGestureRecognizer Tapped="OnMassTapped"/>
                    </Frame.GestureRecognizers>

                    <Grid Padding="20" ColumnDefinitions="*,Auto">
                        <VerticalStackLayout Grid.Column="0" 
                                           VerticalOptions="Center"
                                           Spacing="5">
                            <Label Text="Mass" 
                                   FontSize="20" 
                                   FontFamily="Lilitaone"
                                   FontAttributes="Bold" 
                                   TextColor="White"
                                   HorizontalTextAlignment="End"/>
                            <Label Text="Convert weight measurements from grams to pounds and tons" 
                                   FontSize="10" 
                                   TextColor="White" 
                                   LineBreakMode="WordWrap"
                                   HorizontalTextAlignment="End"/>
                        </VerticalStackLayout>

                        <Image Grid.Column="1" 
                               Source="mass.png" 
                               HeightRequest="100" 
                               WidthRequest="100"
                               Margin="15,0,0,0"/>
                    </Grid>
                </Frame>

                <!-- Temperature Category -->
                <Frame BackgroundColor="#5BA3D0" 
                       CornerRadius="25" 
                       Padding="0" 
                        BorderColor="Transparent"
                       HasShadow="True">
                    <Frame.GestureRecognizers>
                        <TapGestureRecognizer Tapped="OnTemperatureTapped"/>
                    </Frame.GestureRecognizers>

                    <Grid Padding="20" ColumnDefinitions="Auto,*">
                        <Image Grid.Column="0" 
                               Source="temperature.png" 
                               HeightRequest="100" 
                               WidthRequest="100"
                               Margin="0,0,15,0"/>

                        <VerticalStackLayout Grid.Column="1" 
                                           VerticalOptions="Center"
                                           Spacing="5">
                            <Label Text="Temperature" 
                                   FontFamily="Lilitaone"
                                   FontSize="20" 
                                   FontAttributes="Bold" 
                                   TextColor="White"/>
                            <Label Text="Convert temperature between Celsius, Fahrenheit, and Kelvin scales" 
                                   FontSize="10" 
                                   TextColor="White" 
                                   LineBreakMode="WordWrap"/>
                        </VerticalStackLayout>
                    </Grid>
                </Frame>

                <!-- Energy Category -->
                <Frame BackgroundColor="#7EB5D6" 
                       CornerRadius="25" 
                       Padding="0" 
                       BorderColor="Transparent" 
                       HasShadow="True">
                    <Frame.GestureRecognizers>
                        <TapGestureRecognizer Tapped="OnEnergyTapped"/>
                    </Frame.GestureRecognizers>

                    <Grid Padding="20" ColumnDefinitions="*,Auto">
                        <VerticalStackLayout Grid.Column="0" 
                                           VerticalOptions="Center"
                                           Spacing="5">
                            <Label Text="Energy" 
                                   FontSize="20" 
                                   FontFamily="Lilitaone"
                                   FontAttributes="Bold" 
                                   TextColor="White"
                                   HorizontalTextAlignment="End"/>
                            <Label Text="Convert energy units including joules, calories, and watt-hours" 
                                   FontSize="10" 
                                   TextColor="White" 
                                   LineBreakMode="WordWrap"
                                   HorizontalTextAlignment="End"/>
                        </VerticalStackLayout>

                        <Image Grid.Column="1" 
                               Source="energy.png" 
                               HeightRequest="100" 
                               WidthRequest="100"
                               Margin="15,0,0,0"/>
                    </Grid>
                </Frame>

                <!-- Area Category -->
                <Frame BackgroundColor="#5BA3D0" 
                       CornerRadius="25" 
                       Padding="0" 
                        BorderColor="Transparent"
                       HasShadow="True">
                    <Frame.GestureRecognizers>
                        <TapGestureRecognizer Tapped="OnAreaTapped"/>
                    </Frame.GestureRecognizers>

                    <Grid Padding="20" ColumnDefinitions="Auto,*">
                        <Image Grid.Column="0" 
                               Source="area.png" 
                               HeightRequest="100" 
                               WidthRequest="100"
                               Margin="0,0,15,0"/>

                        <VerticalStackLayout Grid.Column="1" 
                                           VerticalOptions="Center"
                                           Spacing="5">
                            <Label Text="Area" 
                                   FontSize="20" 
                                   FontFamily="Lilitaone"
                                   FontAttributes="Bold" 
                                   TextColor="White"/>
                            <Label Text="Convert surface area measurements from square meters to acres" 
                                   FontSize="10" 
                                   TextColor="White" 
                                   LineBreakMode="WordWrap"/>
                        </VerticalStackLayout>
                    </Grid>
                </Frame>

                <!-- Speed Category -->
                <Frame BackgroundColor="#7EB5D6" 
                       CornerRadius="25" 
                       Padding="0" 
                        BorderColor="Transparent"
                       HasShadow="True">
                    <Frame.GestureRecognizers>
                        <TapGestureRecognizer Tapped="OnSpeedTapped"/>
                    </Frame.GestureRecognizers>

                    <Grid Padding="20" ColumnDefinitions="*,Auto">
                        <VerticalStackLayout Grid.Column="0" 
                                           VerticalOptions="Center"
                                           Spacing="5">
                            <Label Text="Speed" 
                                   FontSize="20"
                                   FontFamily="Lilitaone"
                                   FontAttributes="Bold" 
                                   TextColor="White"
                                   HorizontalTextAlignment="End"/>
                            <Label Text="Convert velocity measurements between different speed units" 
                                   FontSize="10" 
                                   TextColor="White" 
                                   LineBreakMode="WordWrap"
                                   HorizontalTextAlignment="End"/>
                        </VerticalStackLayout>

                        <Image Grid.Column="1" 
                               Source="speed.png" 
                               HeightRequest="100" 
                               WidthRequest="100"
                               Margin="15,0,0,0"/>
                    </Grid>
                </Frame>

                <!-- Duration Category -->
                <Frame BackgroundColor="#5BA3D0" 
                       CornerRadius="25" 
                       Padding="0" 
                       BorderColor="Transparent" 
                       HasShadow="True">
                    <Frame.GestureRecognizers>
                        <TapGestureRecognizer Tapped="OnDurationTapped"/>
                    </Frame.GestureRecognizers>

                    <Grid Padding="20" ColumnDefinitions="Auto,*">
                        <Image Grid.Column="0" 
                               Source="duration.png" 
                               HeightRequest="100" 
                               WidthRequest="100"
                               Margin="0,0,15,0"
                               />

                        <VerticalStackLayout Grid.Column="1" 
                                           VerticalOptions="Center"
                                           Spacing="5">
                            <Label Text="Duration" 
                                   FontSize="20" 
                                   FontFamily="Lilitaone"
                                   FontAttributes="Bold" 
                                   TextColor="White"/>
                            <Label Text="Convert time measurements from milliseconds to years" 
                                   FontSize="10" 
                                   TextColor="White" 
                                   LineBreakMode="WordWrap"/>
                        </VerticalStackLayout>
                    </Grid>
                </Frame>

            </VerticalStackLayout>
        </ScrollView>

    </Grid>

</ContentPage>
