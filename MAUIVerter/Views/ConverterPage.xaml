<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MAUIVerter.Views.ConverterPage"
             BackgroundColor="#1a1a2e"
             Title="{Binding CategoryName}">

    <Grid RowDefinitions="Auto,*" Padding="20">

        <!-- Header -->
        <HorizontalStackLayout Grid.Row="0" Spacing="15" Margin="0,20,0,30">
            <Button Text="←" 
                    BackgroundColor="Transparent"
                    TextColor="White"
                    FontSize="32"
                    Clicked="OnBackClicked"
                    Padding="0"
                    WidthRequest="50"/>
            <Label Text="{Binding CategoryName}" 
                   FontSize="32" 
                   FontAttributes="Bold" 
                   TextColor="White"
                   VerticalOptions="Center"/>
        </HorizontalStackLayout>

        <!-- Converter Content -->
        <VerticalStackLayout Grid.Row="1" Spacing="30" VerticalOptions="Center">

            <!-- Input Section -->
            <Frame BackgroundColor="#2d2d44" 
                   CornerRadius="20" 
                   Padding="30"
                   BorderColor="Transparent"
                   HasShadow="True">
                <VerticalStackLayout Spacing="15">
                    <Entry Text="{Binding InputValue}" 
                           FontSize="60"
                           TextColor="White"
                           HorizontalTextAlignment="Center"
                           Keyboard="Numeric"
                           BackgroundColor="Transparent"/>

                    <Picker ItemsSource="{Binding Units}"
                            SelectedItem="{Binding SelectedFromUnit}"
                            TextColor="White"
                            FontSize="18"
                            HorizontalTextAlignment="Center"
                            BackgroundColor="#3d3d5c"/>
                </VerticalStackLayout>
            </Frame>

            <!-- Arrow Icon -->
            <Label Text="⬇️" 
                   FontSize="40" 
                   HorizontalOptions="Center"/>

            <!-- Output Section -->
            <Frame BackgroundColor="#6C5CE7" 
                   CornerRadius="20" 
                   Padding="30"
                   BorderColor="Transparent"
                   HasShadow="True">
                <VerticalStackLayout Spacing="15">
                    <Label Text="{Binding OutputValue}" 
                           FontSize="60"
                           TextColor="White"
                           HorizontalTextAlignment="Center"
                           FontAttributes="Bold"/>

                    <Picker ItemsSource="{Binding Units}"
                            SelectedItem="{Binding SelectedToUnit}"
                            TextColor="White"
                            FontSize="18"
                            HorizontalTextAlignment="Center"
                            BackgroundColor="#5a4bc7"/>
                </VerticalStackLayout>
            </Frame>

        </VerticalStackLayout>

    </Grid>

</ContentPage>