<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:models="clr-namespace:MAUIVerter.Models"
             x:Class="MAUIVerter.Speed"
             Title="Speed">

    <Grid Padding="20" RowDefinitions="Auto,*,*" RowSpacing="20">

        <Label Text="Speed" 
               Grid.Row="0"
               FontSize="32" 
               FontAttributes="Bold" 
               TextColor="White"
               HorizontalOptions="Center"
               Margin="0,20,0,0"/>

        <Frame Grid.Row="1" 
               BackgroundColor="#2d004d" 
               CornerRadius="15" 
               Padding="20"
               VerticalOptions="Center">
            <VerticalStackLayout Spacing="15">
                <Label Text="From" 
                       FontSize="18" 
                       TextColor="White"
                       HorizontalOptions="Center"/>

                <Entry x:Name="InputEntry"
                       Text="1"
                       Keyboard="Numeric"
                       FontSize="48"
                       TextColor="White"
                       HorizontalTextAlignment="Center"
                       BackgroundColor="Transparent"
                       TextChanged="OnInputChanged"/>

                <Picker x:Name="FromPicker"
                        FontSize="18"
                        TextColor="White"
                        BackgroundColor="#1a0033"
                        SelectedIndexChanged="OnUnitChanged">
                    <Picker.Items>
                        <x:String>m/s</x:String>
                        <x:String>km/h</x:String>
                        <x:String>mph</x:String>
                        <x:String>ft/s</x:String>
                        <x:String>Knot</x:String>
                    </Picker.Items>
                </Picker>
            </VerticalStackLayout>
        </Frame>

        <Frame Grid.Row="2" 
               BackgroundColor="#5d1a8c" 
               CornerRadius="15" 
               Padding="20"
               VerticalOptions="Center">
            <VerticalStackLayout Spacing="15">
                <Label Text="To" 
                       FontSize="18" 
                       TextColor="White"
                       HorizontalOptions="Center"/>

                <Label x:Name="OutputLabel"
                       Text="3.6"
                       FontSize="48"
                       FontAttributes="Bold"
                       TextColor="White"
                       HorizontalTextAlignment="Center"/>

                <Picker x:Name="ToPicker"
                        FontSize="18"
                        TextColor="White"
                        BackgroundColor="#2d004d"
                        SelectedIndexChanged="OnUnitChanged">
                    <Picker.Items>
                        <x:String>m/s</x:String>
                        <x:String>km/h</x:String>
                        <x:String>mph</x:String>
                        <x:String>ft/s</x:String>
                        <x:String>Knot</x:String>
                    </Picker.Items>
                </Picker>
            </VerticalStackLayout>
        </Frame>

    </Grid>

</ContentPage>