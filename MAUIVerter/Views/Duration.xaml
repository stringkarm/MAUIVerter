<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MAUIVerter.Duration"
             BackgroundColor="#cbe2ff">
    <Grid RowDefinitions="Auto,*">

        <Image Source="landingpage.png"
               Grid.RowSpan="2"
               Aspect="AspectFill"
               VerticalOptions="FillAndExpand"
               HorizontalOptions="FillAndExpand"/>

        <Grid Grid.RowSpan="2"
              RowDefinitions="Auto,*"
              Padding="20"
              >

            <Label Grid.Row="0"
                   Text="Duration"
                   FontFamily="Lilitaone"
                   FontSize="32"
                   FontAttributes="Bold"
                   TextColor="#5BA3D0"
                   HorizontalOptions="Center"
                   Margin="0,30,0,10"/>

            <VerticalStackLayout Grid.Row="1"
                                 Spacing="30"
                                 HorizontalOptions="Center"
                                 VerticalOptions="Center"
                                 WidthRequest="280">

                <VerticalStackLayout Spacing="12">

                    <Label Text="From"
                           FontSize="15"
                           TextColor="#5BA3D0"
                           FontFamily="Lilitaone"
                           HorizontalOptions="Start"/>

                    <Entry x:Name="InputEntry"
                           Text="1"
                           Keyboard="Numeric"
                           FontSize="22"
                           FontFamily="Lilitaone"
                           TextColor="#5BA3D0"
                           FontAttributes="Bold"
                           HorizontalTextAlignment="Center"
                           BackgroundColor="Transparent"
                           TextChanged="OnInputChanged"/>

                    <BoxView HeightRequest="1"
                             BackgroundColor="#E0E0E0"/>

                    <Picker x:Name="FromPicker"
                            FontSize="16"
                            TextColor="#ffffff"
                            FontFamily="Lilitaone"
                            BackgroundColor="#5BA3D0"
                            HorizontalOptions="Fill"
                            SelectedIndexChanged="OnUnitChanged">
                        <Picker.Items>
                            <x:String>Millisecond</x:String>
                            <x:String>Second</x:String>
                            <x:String>Minute</x:String>
                            <x:String>Hour</x:String>
                            <x:String>Day</x:String>
                            <x:String>Week</x:String>
                            <x:String>Month</x:String>
                            <x:String>Year</x:String>
                        </Picker.Items>
                    </Picker>

                </VerticalStackLayout>

                <VerticalStackLayout Spacing="12">

                    <Label Text="To"
                           FontSize="15"
                           TextColor="#5BA3D0"
                           FontFamily="Lilitaone"
                           HorizontalOptions="Start"/>

                    <Label x:Name="OutputLabel"
                           Text="0"
                           FontSize="20"
                           FontFamily="Lilitaone"
                           FontAttributes="Bold"
                           TextColor="#5BA3D0"
                           HorizontalTextAlignment="Center"/>

                    <Picker x:Name="ToPicker"
                            FontSize="16"
                            TextColor="White"
                            BackgroundColor="#5BA3D0"
                            FontFamily="Lilitaone"
                            HorizontalOptions="Fill"
                            SelectedIndexChanged="OnUnitChanged">
                        <Picker.Items>
                            <x:String>Millisecond</x:String>
                            <x:String>Second</x:String>
                            <x:String>Minute</x:String>
                            <x:String>Hour</x:String>
                            <x:String>Day</x:String>
                            <x:String>Week</x:String>
                            <x:String>Month</x:String>
                            <x:String>Year</x:String>
                        </Picker.Items>
                    </Picker>

                </VerticalStackLayout>

            </VerticalStackLayout>

        </Grid>
    </Grid>
</ContentPage>